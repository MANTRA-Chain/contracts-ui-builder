{
  "name": "@openzeppelin/transaction-form-styles",
  "version": "1.15.0",
  "private": false,
  "description": "Centralized styling system for the OpenZeppelin Transaction Form Builder.",
  "type": "module",
  "main": "global.css",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "clean": "echo 'No build artifacts to clean'",
    "build": "echo 'No build step needed for styles'",
    "lint": "eslint 'utils/**/*.{js,cjs}' --report-unused-disable-directives --max-warnings 0 --config ../../eslint.config.cjs",
    "lint:fix": "eslint 'utils/**/*.{js,cjs}' --fix --config ../../eslint.config.cjs",
    "format": "prettier --write \"**/*.{css,js,cjs}\" --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "format:check": "prettier --check \"**/*.{css,js,cjs}\" --ignore-path ../../.prettierignore --config ../../.prettierrc",
    "test": "echo 'No tests for styles package'"
  },
  "keywords": [
    "css",
    "tailwind",
    "styles",
    "design-system"
  ],
  "author": "OpenZeppelin",
  "license": "MIT",
  "devDependencies": {}
}
