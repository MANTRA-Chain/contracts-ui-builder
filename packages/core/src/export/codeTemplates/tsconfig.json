{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // Ignore JavaScript errors in the template files
    "checkJs": false,
    // Allow non-standard TypeScript syntax in templates
    "allowJs": true,
    "jsx": "preserve",
    // Skip type checking for these files
    "skipLibCheck": true
  },
  "include": ["*.template.tsx", "*.d.ts"]
}
