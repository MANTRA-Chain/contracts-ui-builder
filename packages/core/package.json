{
  "name": "@openzeppelin/transaction-form-builder-core",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "bin": {
    "export-form": "src/export/cli/export-form.cjs"
  },
  "scripts": {
    "dev": "vite",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' tsc --skipLibCheck && NODE_OPTIONS='--max-old-space-size=8192' vite build --emptyOutDir",
    "lint": "eslint 'src/**/*.{ts,tsx}' --report-unused-disable-directives --max-warnings 0 --config eslint.config.cjs",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix --config eslint.config.cjs",
    "lint:all-fix": "eslint 'src/**/*.{ts,tsx,js,cjs,mjs}' --fix --config eslint.config.cjs",
    "lint:adapters": "node lint-adapters.cjs",
    "lint:config-files": "eslint 'vite.config.ts' 'vitest.config.ts' --fix --config eslint.config.cjs || true",
    "fix-all": "pnpm format && pnpm lint:all-fix",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" --config ../../.prettierrc",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" --config ../../.prettierrc",
    "ui:add": "npx shadcn-ui@latest add",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:report": "vitest run --reporter=json --outputFile=./test-results/export-tests.json src/export/__tests__/",
    "export-form": "node src/export/cli/export-form.cjs",
    "storybook": "cd ../.. && pnpm storybook",
    "build-storybook": "cd ../.. && pnpm build-storybook"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@icons-pack/react-simple-icons": "^12.8.0",
    "@openzeppelin/transaction-form-adapter-evm": "workspace:*",
    "@openzeppelin/transaction-form-adapter-midnight": "workspace:*",
    "@openzeppelin/transaction-form-adapter-solana": "workspace:*",
    "@openzeppelin/transaction-form-adapter-stellar": "workspace:*",
    "@openzeppelin/transaction-form-renderer": "workspace:*",
    "@openzeppelin/transaction-form-types": "workspace:*",
    "@openzeppelin/transaction-form-ui": "workspace:*",
    "@openzeppelin/transaction-form-utils": "workspace:^",
    "@openzeppelin/transaction-form-react-core": "workspace:^",
    "@tanstack/react-query": "^5.0.0",
    "@radix-ui/react-accordion": "^1.2.4",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@types/jszip": "^3.4.1",
    "@web3icons/react": "^4.0.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.510.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "viem": "^2.28.0",
    "wagmi": "^2.15.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.12",
    "@tailwindcss/vite": "^4.0.13",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.8",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.12",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "vitest": "^3.0.8"
  }
}
