{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@form-renderer/*": ["../form-renderer/src/*"]
    },
    "emitDeclarationOnly": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", "src/**/*.json"]
}
