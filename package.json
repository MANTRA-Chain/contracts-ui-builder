{
  "name": "transaction-form-builder-monorepo",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "pnpm -r clean",
    "dev": "pnpm --filter=@openzeppelin/transaction-form-builder-core dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "coverage": "pnpm -r coverage",
    "preview": "pnpm --filter=@openzeppelin/transaction-form-builder-core preview",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "lint:all-fix": "pnpm -r lint:all-fix",
    "lint:adapters": "pnpm --filter=@openzeppelin/transaction-form-builder-core lint:adapters",
    "lint:config-files": "pnpm --filter=@openzeppelin/transaction-form-builder-core lint:config-files",
    "type-check": "pnpm -r type-check",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "fix-all": "pnpm format && pnpm lint:fix",
    "ui:add": "pnpm --filter=@openzeppelin/transaction-form-builder-core ui:add",
    "prepare": "husky install",
    "test:coverage": "pnpm -r test:coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "semantic-release": "semantic-release",
    "release:form-renderer": "pnpm --filter=@openzeppelin/transaction-form-renderer publish",
    "commit": "git-cz",
    "update-deps": "pnpm update --latest",
    "update-deps:major": "npx npm-check-updates -u && pnpm install",
    "check-deps": "node --no-warnings scripts/check-deps.cjs",
    "outdated": "pnpm outdated"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --config .prettierrc",
      "eslint --fix --quiet --config eslint.config.cjs"
    ],
    "*.{json,css,md}": [
      "prettier --write --config .prettierrc"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@storybook/addon-controls": "^8.6.7",
    "@storybook/addon-essentials": "^8.6.7",
    "@storybook/addon-interactions": "^8.6.7",
    "@storybook/addon-links": "^8.6.7",
    "@storybook/blocks": "^8.6.7",
    "@storybook/react": "^8.6.7",
    "@storybook/react-vite": "^8.6.7",
    "@types/react": "^19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "commitizen": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.11.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^24.2.3",
    "vite": "^6.2.2"
  },
  "engines": {
    "node": ">=20.11.1"
  }
}
